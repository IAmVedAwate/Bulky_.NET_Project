@{
    @model List<Category>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Category List</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-success">Add New Category</a>
            </div>
        </div>
        <div class="row">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            DisplayOrder
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u=> u.DisplayOrder))
                    {
                        <tr>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.DisplayOrder
                            </td>
                            <td style="width: 160px;" class="text-center">
                                <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger px-3 mx-2"><i class="bi bi-plus-circle-fill"></i></a>
                                <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary px-3 mx-2"><i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>
                        
                    }

                </tbody>
            </table>
        </div>
    </div>
}
