@{
    @model List<Product>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Product List</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-success">Add New Product</a>
            </div>
        </div>
        <div class="row">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            ISBN
                        </th>
                        <th>
                            List Price
                        </th>
                        <th>
                            Price For 1-50
                        </th>
                        <th>
                            Price For 50+
                        </th>
                        <th>
                            Price For 100+
                        </th>
                        <th>
                            Category
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u=> u.Author))
                    {
                        <tr>
                            <td>
                                @obj.Title
                            </td>
                            <td>
                                @obj.Author
                            </td>
                            <td>
                                @obj.ISBN
                            </td>
                            <td>
                                @obj.ListPrice
                            </td>
                            <td>
                                @obj.Price1
                            </td>
                            <td>
                                @obj.Price50
                            </td>
                            <td>
                                @obj.Price100
                            </td>
                            <td>
                                @obj.Category.Name
                            </td>
               
                            <td style="width: 160px;" class="text-center">
                                <a asp-action="Upsert" asp-controller="Product" asp-route-id="@obj.Id" class="btn btn-danger px-3 mx-2"><i class="bi bi-plus-circle-fill"></i></a>
                                <a asp-action="Delete" asp-controller="Product" asp-route-id="@obj.Id" class="btn btn-primary px-3 mx-2"><i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>
                        
                    }

                </tbody>
            </table>
        </div>
    </div>
}
