@{
    @model Category
    <div class="container">
        <h1>New Category</h1>
        <form method="post">
            <div class="border p-3 mt-4">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="mb-2">Category Name: </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="mb-2">Display Order: </label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-success form-control" style="width:150px">Create</button>
                    </div>
                    <div class="col-6">
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Index">Back to the List </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
}
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
